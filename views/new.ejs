<%- include("partials/header") %>
<div class="ui main text container segment">
	<div class="ui huge header">
		New Blog
	</div>
	<div>
		<form class="ui form" action="/blogs" method="POST">
			<div class="field">
				<label>Title</label>
				<input type="text" name="blog[title]" placeholder="title" required>
			</div>
			<div class="field">
				<label>Image</label>
				<input type="text" name="blog[image]" placeholder="image url" required>
			</div>
			<div class="field">
				<label>Blog Conent</label>
				<textarea name="blog[body]" required></textarea>
			</div>
			<input class="ui big violet basic button" type="submit">
					
		</form>	
	</div>
</div>
<%- include("partials/footer") %>